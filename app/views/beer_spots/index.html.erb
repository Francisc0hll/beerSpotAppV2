<div class="row">
  <div class="col-8">
    <h2>Ubicacion de bs</h2>
    <div style='width: 500px;'>  
      <div id="map" style='width: 600px; height: 500px;'>
      </div>
    </div>
    <div class="map-container"></div>
  </div>
  <div class="col-4">
    <h2>Crear nuevo BeerSpots</h2>
    <%= form_with(model: @beer_spot) do |form| %>
      <div class="from-group">
        <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, class:"form-control" %>
        </div>
        <div class="field">
            <%= form.label :address %>
            <%= form.text_field :address, id:"bs_address", class:"form-control" %>
            <%= link_to "#", class:"btn btn-primary", id: "get_location" do %>          
            <i class="fa fa-map-marker"> </i>        
            <% end %>
        </div>

        <div class="field">
            <%= form.label :post%>
            <%= form.text_area :post, class:"form-control" %>
        </div>

        <div class="field">
            <%= form.label :qualification %>
            <%= form.text_field :qualification, class:"form-control" %>
        </div>
       
      </div>
      <br>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>


  </div>

</div> 
<%# aca termina div de row %>

<br>
<br>
<div class="row">

  <div id = 'listBS'class="col">
    <table  class="table">
    <h1>BeerSpots</h1>
      <thead>
        <tr>
          <th>Nombre</th>
          
          <th>Calificacion</th>
        
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id='beerspotsall'>
        <% @beerspots.each do |beerspot| %>
          <tr id="<%=beerspot.id%>">
            <td><%= beerspot.name %></td>
            
            <td style ="text-align: center"><%= beerspot.qualification %></td>
            
            <td><%= link_to 'Show', beerspot %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<script>
  handler = Gmaps.build('Google');
  handler.buildMap({
        provider: {},
        internal: { id: 'map' }
  }, function () {    
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  }) 
  navigator.geolocation.getCurrentPosition(setPosition); 
  var image = '/markerbs.png'
  function setPosition(position) {
  
    handler.getMap().setCenter({lat:position.coords.latitude, lng:position.coords.longitude});
    handler.getMap().setZoom(11);
  }
  
</script>